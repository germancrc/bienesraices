
  <!-- Hero Section -->
<section class="hero-section">
  <div class="hero-container">
    <div class="hero-content">
      <div class="row justify-content-center">
        <!-- Contenido de texto centrado -->
        <div class="col-12 text-center mb-4">
          <h1 class="hero-title mb-3">
            Abre la puerta a lo extraordinario
          </h1>
          <p class="hero-subtitle mb-4">
            Viviendas únicas y oportunidades en la mejor zona del Caribe.
          </p>
        </div>
        
        <!-- Formulario centrado debajo del texto -->
        <div class="col-lg-6 col-md-8 col-12">
          <div class="card shadow-sm rounded-3 mx-auto">
            <div class="card-body p-3">
              <form class="row g-2">
                <!-- Radios en fila -->
                <div class="col-12 text-center mb-2">
                  <div class="d-flex justify-content-center gap-3">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="operacion" id="comprar" value="comprar" checked>
                      <label class="form-check-label" for="comprar">Comprar</label>
                    </div>
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="operacion" id="alquilar" value="alquilar">
                      <label class="form-check-label" for="alquilar">Alquilar</label>
                    </div>
                  </div>
                </div>

                <!-- Selector de tipo con input-group -->
                <div class="col-12 mb-3">
                  <div class="input-group input-group-sm">
                    <label class="input-group-text bg-light fw-bold border-end-0" for="tipoInmueble">¿Qué buscas?</label>
                    <select class="form-select form-select-sm border-start-0" id="tipoInmueble">
                      <option value="" selected>Todos...</option>
                      <option value="casa">Casa</option>
                      <option value="departamento">Departamento</option>
                      <option value="terreno">Villa</option>
                    </select>
                  </div>
                </div>

                <!-- Campo ubicación con input-group -->
                <div class="col-12 mb-3">
                  <div class="input-group input-group-sm">
                    <span class="input-group-text bg-light fw-bold border-end-0">¿Dónde?</span>
                    <input type="text" 
                          class="form-control form-control-sm border-start-0" 
                          id="ubicacion" 
                          placeholder="Punta Cana"
                          aria-label="Ubicación de la propiedad">
                  </div>
                </div>

                <!-- Botón -->
                <div class="col-12">
{{!--                   <button type="submit" class="btn btn-primary text-uppercase text-light shadow-sm">
                    <i class="bi bi-search"></i>&nbsp;Buscar
                  </button> --}}
                      <div class="text-center">
      <a href="/propiedades" class="btn btn-primary btn-more text-light shadow"><i class="bi bi-search"></i>&nbsp;Buscar</a>
    </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- Propiedades Destacadas -->
<section id="propiedades" class="featured-properties">
  <div class="container">
    <h3 class="section-title">Propiedades Destacadas</h3>
    <div class="swiper properties-carousel">
      <div class="swiper-wrapper">
        {{#each featuredProperties}}
          <div class="swiper-slide">{{>property-card}}</div>
        {{/each}}
      </div>
      <!-- Add pagination -->
      <div class="swiper-pagination"></div>
      <!-- Add navigation buttons -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
    <div class="text-center mt-5">
      <a href="/propiedades" class="btn btn-primary btn-more text-light shadow">Ver todas las propiedades</a>
    </div>
  </div>
</section>

  <!-- Características -->
  <section class="features-section">
    <div class="container">
      <h2 class="section-title">
        <i class="bi bi-award me-2"></i> Nuestras Ventajas
      </h2>
      <div class="features-grid">
        <div class="feature-item">
          <div class="feature-icon">
            <i class="bi bi-geo-alt"></i>
          </div>
          <h4>Ubicación Privilegiada</h4>
          <p>
            <i class="bi bi-check-circle me-1"></i> Zonas residenciales con acceso a servicios esenciales.
          </p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <i class="bi bi-house-door"></i>
          </div>
          <h4>Diseño Moderno</h4>
          <p>
            <i class="bi bi-check-circle me-1"></i> Arquitectura contemporánea con acabados de lujo.
          </p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <i class="bi bi-shield-check"></i>
          </div>
          <h4>Seguridad Total</h4>
          <p>
            <i class="bi bi-check-circle me-1"></i> Sistemas de seguridad de última generación.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonios -->
<section class="testimonials-section">
  <div class="container">
    <h2 class="section-title">
      <i class="bi bi-chat-quote-fill me-2"></i> Opiniones de Clientes
    </h2>
    <div class="testimonials-grid">
      {{#each testimonials}}
        <div class="testimonial-card">
          <div class="testimonial-body">
            <div class="testimonial-header">
              <img src="{{avatar}}" class="testimonial-avatar" alt="{{name}}">
              <div>
                <h5 class="testimonial-name">{{name}}</h5>
                <small class="testimonial-role">
                  <i class="bi {{roleIcon}} me-1"></i> {{role}}
                </small>
              </div>
            </div>
            <p class="testimonial-text">
              <i class="bi bi-quote testimonial-quote"></i> {{text}}
            </p>
            <div class="testimonial-rating">
              {{#each (stars rating)}}
                <i class="bi {{this}}"></i>
              {{/each}}
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>


  <!-- FAQ -->
  <section class="faq-section py-5">
    <div class="container">
      <h2 class="section-title mb-4">
        <i class="bi bi-question-circle-fill"></i>&nbsp;Preguntas Frecuentes
      </h2>

      <div class="accordion" id="faqAccordion">
        <!-- Pregunta 1 -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1"
              aria-expanded="true" aria-controls="faq1">
              ● ¿Cuál es el proceso para comprar una propiedad?
            </button>
          </h2>
          <div id="faq1" class="accordion-collapse collapse show" aria-labelledby="headingOne"
            data-bs-parent="#faqAccordion">
            <div class="accordion-body">
              Ofrecemos asesoría personalizada en todas las etapas del proceso: desde la búsqueda hasta el cierre legal
              y la firma.
            </div>
          </div>
        </div>

        <!-- Pregunta 2 -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingTwo">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2"
              aria-expanded="false" aria-controls="faq2">
              ● ¿Ofrecen opciones de financiamiento?
            </button>
          </h2>
          <div id="faq2" class="accordion-collapse collapse" aria-labelledby="headingTwo"
            data-bs-parent="#faqAccordion">
            <div class="accordion-body">
              Sí. Trabajamos con varias entidades financieras y te ayudamos a encontrar la mejor opción según tu perfil.
            </div>
          </div>
        </div>

        <!-- Pregunta 3 -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingThree">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3"
              aria-expanded="false" aria-controls="faq3">
              ● ¿Qué documentos necesito para vender mi propiedad?
            </button>
          </h2>
          <div id="faq3" class="accordion-collapse collapse" aria-labelledby="headingThree"
            data-bs-parent="#faqAccordion">
            <div class="accordion-body">
              Necesitarás la escritura, certificado de libertad de gravamen, identificación oficial y comprobante de
              domicilio.
            </div>
          </div>
        </div>

        <!-- Pregunta 4 -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingFour">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4"
              aria-expanded="false" aria-controls="faq4">
              ● ¿Puedo agendar una visita a una propiedad?
            </button>
          </h2>
          <div id="faq4" class="accordion-collapse collapse" aria-labelledby="headingFour"
            data-bs-parent="#faqAccordion">
            <div class="accordion-body">
              Por supuesto. Puedes contactarnos por WhatsApp o mediante nuestro formulario para agendar una cita sin
              compromiso.
            </div>
          </div>
        </div>

        <!-- Pregunta 5 -->
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingFive">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq5"
              aria-expanded="false" aria-controls="faq5">
              ● ¿Solo operan en una ciudad o cubren varias zonas?
            </button>
          </h2>
          <div id="faq5" class="accordion-collapse collapse" aria-labelledby="headingFive"
            data-bs-parent="#faqAccordion">
            <div class="accordion-body">
              Trabajamos en varias ciudades y regiones. Consulta nuestras propiedades filtrando por ubicación para más
              detalles.
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
