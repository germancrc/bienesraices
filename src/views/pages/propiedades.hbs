<div class="container-fluid p-3 px-md-5">

  <!-- Filtros (Solo botón en móvil) -->
  <section class="mb-4">
    <div class="d-lg-none mb-3">
      <button class="btn btn-primary w-100" type="button" data-bs-toggle="collapse" data-bs-target="#filtersCollapse"
        aria-expanded="false" aria-controls="filtersCollapse">
        <i class="bi bi-funnel me-2"></i>Filtrar propiedades
      </button>
    </div>

    <div class="collapse d-lg-block" id="filtersCollapse">
      <h2 class="mb-3 d-none d-lg-block">Filtrar propiedades</h2>
      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white border-bottom-0 pb-0">
          <h5 class="card-title mb-0"><i class="bi bi-funnel-fill me-2 text-primary"></i>Filtrar propiedades</h5>
        </div>
        <div class="card-body pt-0">
          <form class="row g-3">
            <div class="col-md-3 col-6">
              <label for="tipo" class="form-label">Tipo</label>
              <select id="tipo" class="form-select">
                <option selected>Todos</option>
                <option>Casa</option>
                <option>Apartamento</option>
                <option>Departamento</option>
                <option>Terreno</option>
                <option>Local Comercial</option>
                <option>Oficina</option>
                <option>Bodega</option>
                <option>Casa en condominio</option>
              </select>
            </div>
            <div class="col-md-3 col-6">
              <label for="operacion" class="form-label">Operación</label>
              <select id="operacion" class="form-select">
                <option selected>Todas</option>
                <option>Venta</option>
                <option>Renta</option>
                <option>Traspaso</option>
              </select>
            </div>
            <div class="col-md-3 col-6">
              <label for="precio" class="form-label">Rango de precio</label>
              <select id="precio" class="form-select">
                <option selected>Cualquier precio</option>
                <option>Hasta $100,000</option>
                <option>$100,000 - $200,000</option>
                <option>$200,000 - $500,000</option>
                <option>$500,000 - $1,000,000</option>
                <option>Más de $1,000,000</option>
              </select>
            </div>
            <div class="col-md-3 col-6">
              <label for="habitaciones" class="form-label">Habitaciones</label>
              <select id="habitaciones" class="form-select">
                <option selected>Cualquier cantidad</option>
                <option>1+</option>
                <option>2+</option>
                <option>3+</option>
                <option>4+</option>
              </select>
            </div>
            <div class="col-md-3 col-6">
              <label for="banos" class="form-label">Baños</label>
              <select id="banos" class="form-select">
                <option selected>Cualquier cantidad</option>
                <option>1+</option>
                <option>2+</option>
                <option>3+</option>
              </select>
            </div>
            <div class="col-md-3 col-6">
              <label for="antiguedad" class="form-label">Antigüedad</label>
              <select id="antiguedad" class="form-select">
                <option selected>Cualquier antigüedad</option>
                <option>Nueva</option>
                <option>1-5 años</option>
                <option>5-10 años</option>
                <option>10-20 años</option>
                <option>Más de 20 años</option>
              </select>
            </div>
            <div class="col-md-3 col-6">
              <label for="estacionamiento" class="form-label">Estacionamiento</label>
              <select id="estacionamiento" class="form-select">
                <option selected>Cualquier cantidad</option>
                <option>1+</option>
                <option>2+</option>
                <option>3+</option>
              </select>
            </div>
            <div class="col-md-3 col-6 d-flex align-items-end">
              <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-funnel me-2"></i>Filtrar
              </button>
              <button type="reset" class="btn btn-outline-secondary w-100 ms-2">
                <i class="bi bi-arrow-counterclockwise me-2"></i>Limpiar
              </button>
            </div>
          </form>
        </div>
        <div class="card-footer bg-white border-top-0 pt-0 text-end">
          <small class="text-muted">Se encontraron {{properties.length}} propiedades</small>
        </div>
      </div>
    </div>
  </section>

  <!-- Contenido principal -->
<section class="row">
  <!-- Listado de propiedades -->
  <div class="col-lg-8 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="mb-0">Propiedades disponibles</h3>
      <div>
        <span class="badge bg-primary rounded-pill">{{properties.length}} resultados</span>
        <button id="changeViewBtn" class="btn btn-sm btn-outline-secondary ms-2 d-lg-none">
          <i class="bi bi-grid"></i>
        </button>
      </div>
    </div>

    {{#if properties.length}}
      <!-- Grid para desktop (oculto en móviles) -->
      <div class="d-none d-lg-block">
        <div class="row properties-grid">
          {{#each properties}}
            <div class="col-md-12">
              {{>property-card}}
            </div>
          {{/each}}
        </div>
      </div>

      <!-- Carrusel Swiper solo para móviles -->
      <div class="d-lg-none swiper properties-carousel">
        <div class="swiper-wrapper">
          {{#each properties}}
            <div class="swiper-slide">
              {{>property-card}}
            </div>
          {{/each}}
        </div>
        <!-- Paginación y navegación -->
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    {{else}}
      <div class="alert alert-warning d-flex align-items-center">
        <i class="bi bi-exclamation-triangle me-3 fs-4"></i>
        <div>
          <h4 class="alert-heading mb-1">No se encontraron propiedades</h4>
          <p class="mb-0">Intenta ajustar tus filtros de búsqueda para obtener resultados.</p>
        </div>
      </div>
    {{/if}}
  </div>

  <!-- Mapa (visible solo en desktop) -->
  <div class="col-lg-4 d-none d-lg-block">
    <div class="sticky-top pt-3" style="top: 20px;">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Ubicación</h3>
        <div>
          <button id="refreshMap" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-clockwise"></i> Actualizar
          </button>
          <button id="mapFullscreen" class="btn btn-sm btn-outline-secondary ms-2">
            <i class="bi bi-arrows-fullscreen"></i>
          </button>
        </div>
      </div>
      <div id="map" class="map-container rounded-3 shadow-sm" data-properties="{{json properties}}"
        style="height: 500px;"></div>
      <div class="mt-3">
        <div class="list-group" id="mapPropertiesList">
          {{#each properties}}
          <a href="#" class="list-group-item list-group-item-action map-property-item" data-id="{{id}}">
            <div class="d-flex w-100 justify-content-between">
              <h6 class="mb-1">{{title.text}}</h6>
              <small class="text-success fw-bold">{{price}}</small>
            </div>
            <p class="mb-1 text-muted small">
              {{#each details}}
              <i class="bi {{icon}} me-1"></i>{{text}}{{#unless @last}} · {{/unless}}
              {{/each}}
            </p>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
  <!-- Botón flotante para mapa en móvil -->
  <div class="d-lg-none fixed-bottom text-end pe-3 pb-3">
    <button id="showMapMobile" class="btn btn-primary rounded-circle shadow-lg" style="width: 56px; height: 56px;">
      <i class="bi bi-map" style="font-size: 1.2rem;"></i>
    </button>
  </div>

  <!-- Modal para mapa en móvil -->
  <div class="modal fade" id="mapModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Ubicación de propiedades</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body p-0">
          <div id="mobileMap" style="height: 100%; width: 100%;" data-properties="{{json properties}}"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-lg me-1"></i>Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>
</div>